#library "Savebutton"
#include "zcommon.acs"

script "SaveButton" (void)
{
    int SaveGems = CheckInventory("SaveGem");
    
    if (SaveGems > 0)
    {
        Autosave();
        Log(l:"NOSAVE_SAVED", s:" ", l:"NOSAVE_REMAIN_1",s:" ", i:SaveGems - 1,s:" ", l:"NOSAVE_REMAIN_2");
        TakeInventory("SaveGem",1);
    }
    else
    {
        Log(l:"NOSAVE_PREVENTION");
    }
}
